@model GosserandProject.Models.ViewModels.UserManagement.UserManagementViewModel

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Users</h2>

<div class="mdl-grid" style="max-width:98%;">
	<div class="mdl-cell mdl-cell--10-col">
		<table class="mdl-data-table mdl-js-data-table">
			<thead>
				<tr>
					<td>Last Name</td>
					<td>First Name</td>
					<td>Email</td>
					<td>Phone Number</td>
					<td>Postion</td>
				</tr>
			</thead>
			<tbody>
				@foreach (var user in Model.Users)
						{
							<tr>
								<td>
									@user.LastName
								</td>
								<td>
									@user.FirstName
								</td>
								<td>
									@user.Email
								</td>
								<td>
									@user.PhoneNumber
								</td>
								<td>
									@user.Position
								</td>
								<td>
									<a asp-controller="UserManagement" asp-action="Edit" asp-route-id="@user.UserId">Edit</a>
									<a asp-controller="UserManagement" asp-action="Detail" asp-route-id="@user.UserId">Details</a>
									<a asp-controller="UserManagement" asp-action="Delete" asp-route-id="@user.UserId">Delete</a>
								</td>
							</tr>
						}
						</tbody>
				</table>
			</div>
		</div>

		